<h1>All Matches Relevant to <%= @user.name %></h1>
<table class='table table-full'>
	<tr>
		<th>Name</th>
		<th>Status</th>
		<th>Created</th>
		<th>Updated</th>
	</tr>
	<% @matches.each do |index, match| %>
		<% status = if match.winner.nil? then 'Judging...' else 'Finished' end %>
		<tr>
			<td><%= link_to match.name, match %></td>
			<td><%= status %></td>
			<td><%= match.created_at %></td>
			<td><%= match.updated_at %></td>
		</tr>
	<% end %>
</table>