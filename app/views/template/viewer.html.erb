<div class='viewer'>
	<input type='hidden' id='match_id' value="<%= @match._id %>" />
	<table class='pull-left'>
		<tbody>
			<% 16.times do |i| %>
				<tr>
					<% 16.times do |j| %>
						<td id='map_<%= i %>_<%= j %>' class='team0' team='0'>
							<span id="direction_<%= i %>_<%= j %>" class='hide viewer-direction'></span>
						</td>
					<% end %>
				</tr>
			<% end %>
		</tbody>
	</table>
	<div class='viewer-bar pull-left'>
		<% @codes.each_with_index do |code, i| %>
			<h3 class='team<%= i %>'>
				<span><%= code[:user] %></span>
				/
				<span><%= code[:name] %></span>
				*
				<span id='cnt_<%= i+1 %>'>0</span>
			</h3>
		<% end %>
		<div class='btn-line'>
			<a href='##' id='play_btn' class='btn btn-small'>Play</a>
			<a href='##' id='pause_btn' class='btn btn-small'>Pause</a>
		</div>
		<div class='btn-line'>
			<a href='##' id='slow_btn' class='btn btn-small'>Slower</a>
			<a href='##' id='fast_btn' class='btn btn-small'>Faster</a>
		</div>
		<div class='btn-line'>
			<input id='direction_chk' type='checkbox'/><span>Direction</span>
		</div>
		FPS:
		<span id='speed_span'>20</span>
	</div>
</div>
